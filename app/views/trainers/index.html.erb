<p id="notice"><%= notice %></p>

<h1>Trainers</h1>

<table>
  <thead>
    <tr>
      <th>Trname</th>
      <th>Level</th>
      <th>Gender</th>
      <th>Country</th>
      <th>Motto</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.trname %></td>
        <td><%= trainer.level %></td>
        <td><%= trainer.gender %></td>
        <td><%= trainer.country %></td>
        <td><%= trainer.motto %></td>
        <td><%= trainer.trid %></td>
        <td><%= link_to 'Show', trainer %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

